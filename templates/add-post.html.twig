{% extends 'base.html.twig' %}
{% block stylessheet %}
    {% block stylesheets %}

        {{ encore_entry_link_tags('add-post') }}
    {% endblock %}{% endblock %}
{% block javascripts%}

    {{ encore_entry_script_tags('add-post') }}
{% endblock %}
{% block body %}



    <div class="container">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">Create New Post</h3>
            </div>

            <div class="card-body">
                <form id="postForm">
                    <div class="mb-3">
                        <label for="postTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="postTitle" required>
                    </div>

                    <div class="mb-3">
                        <label for="postContent" class="form-label">Content</label>
                        <textarea class="form-control" id="postContent" rows="3" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="postImage" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="postImage" accept="image/*" hidden>
                        <button type="button" class="btn btn-primary w-100 image-upload-btn" onclick="document.getElementById('postImage').click()">Upload Image</button>
                        <div id="imagePreview" class="text-center"></div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Create Post</button>
                        <button type="button" class="btn btn-secondary close-card-btn">Cancel</button>                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

